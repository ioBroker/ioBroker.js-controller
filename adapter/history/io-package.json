{
    "common": {
        "name":                     "history",
        "desc":                     "manages state history",
        "version":                  "0.0.1",
        "mode":                     "daemon",
        "platform":                 "javascript/Node.js",
        "loglevel":                 "info"
    },
    "native": {
        "fifo": {
            "defaultMin": 16,
            "defaultMax": 32
        },
        "transports": {
            "couchdb": {
                "type": "couchdb",
                "enabled": true
            },
            "file1": {
                "type": "file",
                "enabled": false,
                "name": 'foo.log'

            },
            "file2": {
                "type": "file",
                "enabled": false,
                "name": 'bar.log'

            },
            "graphite": {
                "type": "graphite",
                "enabled": false
                "host": "172.16.23.180"
            },
            "rrd": {
                "type": "rrd",
                "enabled": false
            },
            "mysql": {
                "type": "mysql",
                "enabled": false,
                "host": "172.16.23.180",
                "user": "user",
                "pass": "xyz",
                "db": "iobroker"
            }
        }
    },
    "objects": [
        {
            "_id": "_design/history",
            "language": "javascript",
            "views": {
                "state": {
                    "map": "function(doc) { if (doc.type=='state' && doc.common.history) emit(doc._id, doc.common.history) }"
                }
            }
        }
    ]
}