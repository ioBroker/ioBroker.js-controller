{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build/esm",
    "rootDir": "src",
    "module": "NodeNext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../common/tsconfig.json"
    },
    {
      "path": "../common-db/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts"
  ],
  "exclude": [
    "build/**",
    "node_modules/**"
  ]
}